{
  "manifest_version": 3,
  "name": "RSI官网导航栏",
  "version": "1.1",
  "description": "在RSI官网左侧添加分类悬浮导航栏，支持自定义链接功能",
  "permissions": ["storage"],
  "host_permissions": ["https://robertsspaceindustries.com/*"],
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://robertsspaceindustries.com/*"],
      "css": ["content.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "96": "icons/icon96.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://robertsspaceindustries.com/*"]
    }
  ]
}
